{
  "cleanupPeriodDays": 1095,
  "env": {
    "CLAUDE_CODE_ENABLE_TASKS": "true",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "allow": [
      "Edit",
      "Bash(ls:*)",
      "Bash(git commit:*)",
      "Bash(git add:*)"
    ],
    "deny": [
      "WebSearch",
      "NotebookEdit",
      "EnterPlanMode",
      "ExitPlanMode",
      "mcp__sentry__whoami",
      "mcp__sentry__find_organizations",
      "mcp__sentry__find_teams",
      "mcp__sentry__analyze_issue_with_seer",
      "mcp__notion__notion-get-teams",
      "mcp__notion__notion-get-users",
      "mcp__notion__notion-get-self",
      "mcp__notion__notion-get-user"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/shell_env/session-start.ts",
            "timeout": 300
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/pane_session/session-start.ts",
            "timeout": 300
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/pre-tool-use.ts",
            "timeout": 300
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notification.ts",
            "timeout": 300
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/stop.ts",
            "timeout": 300
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/pane_session/session-end.ts",
            "timeout": 300
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.js",
    "padding": 0
  },
  "enabledPlugins": {
    "todo-enforcer@harness": false,
    "comment-checker@harness": true,
    "dinii-kpi@dinii-tools": true
  },
  "skipDangerousModePermissionPrompt": true
}
