{
  "env": {
    "CLAUDE_CODE_ENABLE_TASKS": "true"
  },
  "cleanupPeriodDays": 1095,
  "permissions": {
    "allow": ["Edit", "Bash(ls:*)", "Bash(git commit:*)", "Bash(git add:*)"],
    "deny": [
      "WebSearch",
      "NotebookEdit",
      "EnterPlanMode",
      "ExitPlanMode",

      "mcp__sentry__whoami",
      "mcp__sentry__find_organizations",
      "mcp__sentry__find_teams",
      "mcp__sentry__analyze_issue_with_seer",

      "mcp__notion__notion-move-pages",
      "mcp__notion__notion-duplicate-page",
      "mcp__notion__notion-create-database",
      "mcp__notion__notion-create-comment",
      "mcp__notion__notion-get-teams",
      "mcp__notion__notion-get-users",
      "mcp__notion__notion-get-self",
      "mcp__notion__notion-get-user"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/pre-tool-use.sh",
            "timeout": 300
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/post-tool-use.sh",
            "timeout": 300
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notification.sh",
            "timeout": 300
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/stop.sh",
            "timeout": 300
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/subagent-stop.sh",
            "timeout": 300
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/pre-compact.sh",
            "timeout": 300
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.js",
    "padding": 0
  },
  "enabledPlugins": {
    "todo-enforcer@harness": false,
    "comment-checker@harness": true,
    "dinii-kpi@dinii-tools": true
  }
}
